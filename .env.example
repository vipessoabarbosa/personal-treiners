# ==============================================
# FITCOACH PRO - ENVIRONMENT VARIABLES
# ==============================================
# Copie este arquivo para .env e preencha com os valores reais
# NUNCA commite o arquivo .env no repositório!

# ==============================================
# APLICAÇÃO
# ==============================================
NODE_ENV=development
APP_NAME=FitCoach Pro
APP_VERSION=1.0.0
APP_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# ==============================================
# SERVIDOR
# ==============================================
PORT=3001
HOST=localhost

# ==============================================
# BANCO DE DADOS
# ==============================================
# PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/fitcoach_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fitcoach_dev
DB_USER=username
DB_PASSWORD=password
DB_SSL=false

# ==============================================
# CACHE E SESSÕES
# ==============================================
# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# AUTENTICAÇÃO E SEGURANÇA
# ==============================================
# JWT
JWT_SECRET=your-super-secret-jwt-key-here-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-min-32-chars
JWT_REFRESH_EXPIRES_IN=30d

# Criptografia
ENCRYPTION_KEY=your-32-char-encryption-key-here
HASH_SALT_ROUNDS=12

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:19006

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# EMAIL
# ==============================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=FitCoach Pro
SMTP_FROM_EMAIL=noreply@fitcoach.pro

# Email Templates
EMAIL_VERIFICATION_TEMPLATE_ID=d-1234567890
PASSWORD_RESET_TEMPLATE_ID=d-0987654321

# ==============================================
# ARMAZENAMENTO DE ARQUIVOS
# ==============================================
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=fitcoach-uploads
AWS_S3_URL=https://fitcoach-uploads.s3.amazonaws.com

# Cloudinary (alternativa)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Upload local (desenvolvimento)
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# ==============================================
# INTEGRAÇÕES EXTERNAS
# ==============================================
# Google APIs
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Apple Sign In
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key

# Push Notifications
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
APNS_PRIVATE_KEY=your-apns-private-key

# ==============================================
# MONITORAMENTO E ANALYTICS
# ==============================================
# Sentry
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# PostHog
POSTHOG_API_KEY=your-posthog-api-key
POSTHOG_HOST=https://app.posthog.com

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# ==============================================
# LOGS
# ==============================================
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ==============================================
# DESENVOLVIMENTO
# ==============================================
# Debug
DEBUG=fitcoach:*
VERBOSE_LOGGING=false

# Hot Reload
WATCH_FILES=true
IGNORE_WATCH=node_modules,dist,build

# ==============================================
# TESTES
# ==============================================
# Test Database
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/fitcoach_test

# Test Redis
TEST_REDIS_URL=redis://localhost:6379/1

# Test Email (Ethereal)
TEST_SMTP_HOST=smtp.ethereal.email
TEST_SMTP_PORT=587
TEST_SMTP_USER=test-user
TEST_SMTP_PASSWORD=test-password

# ==============================================
# PRODUÇÃO (Railway/Vercel)
# ==============================================
# Essas variáveis são configuradas no ambiente de produção
# DATABASE_URL=postgresql://user:pass@host:port/db (Railway)
# REDIS_URL=redis://user:pass@host:port (Railway)
# JWT_SECRET=production-secret (Railway)
# SENTRY_DSN=production-dsn (Railway)

# ==============================================
# MOBILE (React Native)
# ==============================================
# Expo
EXPO_PUBLIC_API_URL=http://localhost:3001
EXPO_PUBLIC_WEB_URL=http://localhost:3000
EXPO_PUBLIC_ENVIRONMENT=development

# ==============================================
# FRONTEND (React)
# ==============================================
# Vite
VITE_API_URL=http://localhost:3001
VITE_APP_NAME=FitCoach Pro
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# ==============================================
# DOCKER
# ==============================================
# PostgreSQL Container
POSTGRES_DB=fitcoach_dev
POSTGRES_USER=fitcoach_user
POSTGRES_PASSWORD=fitcoach_password

# Redis Container
REDIS_PASSWORD=redis_password

# ==============================================
# BACKUP E RECOVERY
# ==============================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=fitcoach-backups

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_SENTRY=true

# ==============================================
# LIMITES E QUOTAS
# ==============================================
MAX_CLIENTS_PER_TRAINER=100
MAX_WORKOUTS_PER_CLIENT=50
MAX_EXERCISES_PER_WORKOUT=20
MAX_GYMS_PER_TRAINER=10
MAX_PHOTOS_PER_CLIENT=20

# ==============================================
# WEBHOOKS
# ==============================================
WEBHOOK_SECRET=your-webhook-secret-key
WEBHOOK_TIMEOUT=30000

# ==============================================
# CRON JOBS
# ==============================================
ENABLE_CRON_JOBS=true
CRON_TIMEZONE=America/Sao_Paulo

# ==============================================
# HEALTH CHECKS
# ==============================================
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000