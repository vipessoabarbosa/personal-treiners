# ==============================================
# FITCOACH PRO - DEVELOPMENT ENVIRONMENT
# ==============================================

# Application
APP_NAME="FitCoach Pro (Dev)"
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=debug

# Server Configuration
PORT=3001
HOST=0.0.0.0
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://localhost:19006
TRUST_PROXY=false

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fitcoach_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fitcoach_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

# Cache (Redis)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# Authentication & Security
JWT_SECRET=dev_jwt_secret_key_change_in_production_123456789
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
ENCRYPTION_KEY=dev_encryption_key_32_chars_long_123
BCRYPT_ROUNDS=10
SESSION_SECRET=dev_session_secret_change_in_production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Email (Development - MailHog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_NAME="FitCoach Pro Dev"
SMTP_FROM_EMAIL=noreply@fitcoach.local

# File Storage (Local Development)
STORAGE_TYPE=local
UPLOAD_PATH=./uploads
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,application/pdf

# AWS S3 (Optional for dev)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Cloudinary (Optional for dev)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# External APIs
GOOGLE_MAPS_API_KEY=
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# Push Notifications (Development)
FCM_SERVER_KEY=
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_PRIVATE_KEY=
APNS_BUNDLE_ID=com.fitcoach.pro.dev

# Monitoring & Analytics (Disabled in dev)
SENTRY_DSN=
POSTHOG_API_KEY=
GOOGLE_ANALYTICS_ID=

# Logging
LOG_FORMAT=dev
LOG_FILE_ENABLED=false
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Development Tools
HOT_RELOAD=true
WATCH_FILES=true
SOURCE_MAPS=true
PRETTY_ERRORS=true

# Testing
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fitcoach_test
TEST_REDIS_URL=redis://localhost:6379/1
TEST_TIMEOUT=30000

# Frontend URLs
FRONTEND_URL=http://localhost:5173
MOBILE_DEEP_LINK_SCHEME=fitcoach-dev

# Docker Development
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000

# Feature Flags (All enabled in dev)
FEATURE_REGISTRATION=true
FEATURE_SOCIAL_LOGIN=true
FEATURE_PUSH_NOTIFICATIONS=true
FEATURE_ANALYTICS=false
FEATURE_PREMIUM_FEATURES=true

# API Limits & Quotas (Relaxed in dev)
API_RATE_LIMIT=1000
FILE_UPLOAD_LIMIT=50
DAILY_EMAIL_LIMIT=100
MAX_CLIENTS_PER_TRAINER=100
MAX_WORKOUTS_PER_CLIENT=50

# Webhooks (Development)
WEBHOOK_SECRET=dev_webhook_secret_123
WEBHOOK_TIMEOUT=5000

# Cron Jobs
CRON_ENABLED=true
CRON_BACKUP_SCHEDULE="0 2 * * *"
CRON_CLEANUP_SCHEDULE="0 3 * * *"
CRON_REPORTS_SCHEDULE="0 8 * * 1"

# Backup & Recovery (Local development)
BACKUP_ENABLED=false
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=7

# Performance
CACHE_ENABLED=true
CACHE_TTL=300
COMPRESSION_ENABLED=true
STATIC_CACHE_MAX_AGE=86400